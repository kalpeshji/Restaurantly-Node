<%- include('../Partials/header.ejs') -%>
    <!-- Contact -->

    <div class="contact" id='contact'>
        <div class="container ">
            <div class="spec-title">
                <h2 class='text-light'>CONTACT</h2>
                <p class='fw-semibold pb-4 primary'>Contact Us</p>
            </div>
        </div>
        <div class="map">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3024.361281103578!2d-74.00871262345312!3d40.71006263773346!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a22a3bda30d%3A0xb89d1fe6bc499443!2sDowntown%20Conference%20Center!5e0!3m2!1sen!2sin!4v1701762536309!5m2!1sen!2sin"
                width="100%" height="350" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="info d-flex text-light">
                        <div class="info-icon mt-2">
                            <i class="bi bi-geo-alt rounded-5"></i>
                        </div>
                        <div class="info-det ms-3">
                            <h4 class='ff-poppins'>Location:</h4>
                            <p class='ff-opensans'>A108 Adam Street, New York, NY 535022</p>
                        </div>
                    </div>
                    <div class="info d-flex text-light mt-3">
                        <div class="info-icon mt-2">
                            <i class="bi bi-clock rounded-5"></i>
                        </div>
                        <div class="info-det ms-3">
                            <h4 class='ff-poppins'>Open Hours:</h4>
                            <p class='ff-opensans'>Monday-Saturday:<br />11:00 AM - 11:00 PM</p>
                        </div>
                    </div>
                    <div class="info d-flex text-light mt-3">
                        <div class="info-icon mt-2">
                            <i class="bi bi-envelope rounded-5"></i>
                        </div>
                        <div class="info-det ms-3">
                            <h4 class='ff-poppins'>Email:</h4>
                            <p class='ff-opensans'>info@example.com</p>
                        </div>
                    </div>
                    <div class="info d-flex text-light mt-3">
                        <div class="info-icon mt-2">
                            <i class="bi bi-phone rounded-5"></i>
                        </div>
                        <div class="info-det ms-3">
                            <h4 class='ff-poppins'>Call:</h4>
                            <p class='ff-opensans'>+1 5589 55488 55</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <form class='mt20'>
                        <div class="row">
                            <div class="col-md-6">
                                <input type="text" class="px-6 ps-3 w-100 pe-2 bg-transparent rounded-0"
                                    placeholder='Your Name' />
                            </div>
                            <div class="col-md-6">
                                <input type="email" class="px-6 ps-3 w-100 pe-2 bg-transparent rounded-0"
                                    placeholder='Your Email' />
                            </div>
                            <div class="col-md-12">
                                <input type="text" class="px-6 ps-3 w-100 pe-2 bg-transparent rounded-0 mt-4"
                                    placeholder='Subject' />
                            </div>
                            <div class="col">
                                <textarea class="ps-3 w-100 pe-2 bg-transparent mt-4 rounded-0 text-light pt-2 pb-2"
                                    placeholder='Message'></textarea>
                            </div>
                        </div>
                        <div class="btn-book d-flex justify-content-center mt-4">
                            <button class='btn text-light rounded-5 px-4 py-2'>Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('../Partials/footer.ejs') -%>